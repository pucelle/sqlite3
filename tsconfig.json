{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "esnext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"rootDir": "src",
		"outDir": "out",
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"test",
		"out"
	]
}